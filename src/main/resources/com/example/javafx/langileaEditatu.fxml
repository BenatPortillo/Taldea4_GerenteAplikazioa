<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx.LangileaEditatuController" style="-fx-background-color: #345A7B;">
    <children>
        <!-- Icono de regreso -->
        <ImageView onMouseClicked="#onAtzeaBotoiaClick" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="20.0">
            <image>
                <Image url="@../../../images/atzea.png" />
            </image>
        </ImageView>

        <!-- Usuario Label -->
        <Label fx:id="erabiltzailea" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Erabiltzailea" textFill="#CFD0CE" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0"/>

        <!-- Tabla de trabajadores -->
        <TableView fx:id="langileTaula" prefWidth="500" prefHeight="300" AnchorPane.leftAnchor="250.0" AnchorPane.topAnchor="150.0">
            <columns>
                <TableColumn text="Izena" prefWidth="150"/>
                <TableColumn text="Email" prefWidth="150"/>
                <TableColumn text="Lan Postua" prefWidth="150"/>
                <TableColumn text="Pasahitza" prefWidth="150"/>
            </columns>
        </TableView>

        <!-- Formulario de edición -->
        <VBox spacing="20" prefWidth="250" AnchorPane.leftAnchor="850.0" AnchorPane.topAnchor="150.0">
            <Label text="Izena:"/>
            <TextField fx:id="izenaField"/>

            <Label text="Email:"/>
            <TextField fx:id="emailField"/>

            <Label text="Pasahitza:"/>
            <TextField fx:id="pasahitzaField"/>

            <Label text="Lan Postua:"/>
            <TextField fx:id="lanPostuaField"/>

            <!-- Botón de guardar -->
            <Button text="Editatu" onAction="#onEditatuBotoiaClick"/>
        </VBox>
    </children>
</AnchorPane>

